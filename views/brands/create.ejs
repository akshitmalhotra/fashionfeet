<%- include('../partials/header'); -%>
<style>
	body{
		background:url("https://www.desktopbackground.org/p/2010/10/23/99520_nike-shoes-hd-wallpapers-hd-wallpapers-inn_1000x800_h.jpg");
		background-repeat:no-repeat;
		background-size:cover;
		background-position: center;
		min-height: 100vh;
	}
	@media(max-width: 980px)
	{
		h1.reg{
			color: white;
			font-weight: bold;
			font-size: 2.6em;
			text-shadow: 0 2px 4px black;
			margin-top: 15px;
		}
		input.form-control.reg{
			font-size: 1em;
			width: 95%;
			height: 45px;
		}
		textarea.form-control{
			font-size: 1em;
			width: 95%;
			height: 45px;
		}
		button.btn.reg{
			font-size: 1.3em;
			width: 95%;
			height: 45px;
		}
		.form-control.fn{
			height: 45px;
			margin-left: auto;
		}
	}
	@media(min-width: 981px)
	{
		.form-control.fn{
			margin-left: auto;
		}
		h1.reg{
		font-weight: bold;
		color: white;
		font-size: 3em;
		margin-top: 15px;
		text-shadow: 0 2px 6px #322323;
	}
		input.form-control.reg{
			width: 45%;
		}
		textarea.form-control{
			font-size: 1em;
			width: 45%;
		}
		button.btn.reg{
			width: 45%;
		}
	}
	.page-wrap{
		min-height: 100vh;
	}
</style>
<div class="page-wrap main" style="text-align: center;">
        <h1 class="reg">New Product</h1>
        <div style="margin: 25px auto;">
<form action="/addShoes" method="POST">
	<div class="form-group">
        <input class="form-control reg" style="margin: auto auto;" type="text" name="name" placeholder="Product name" required>
    </div>
	<div class="form-row">
		<div class="col">
			<div class="form-group">
			<input class="form-control reg fn" type="text" name="size" placeholder="Sizes" required>   </div>	
		</div>
		<div class="col">
			<div class="form-group">
			<input class="form-control reg ln" type="text" name="color" placeholder="Colors" required>   </div>	
	    </div>
	</div>
		
	<div class="form-group">
			<input class="form-control reg" style="margin: auto auto;" type="text" name="price" placeholder="Price" required>
			</div>
			<div class="form-group">
				<input class="form-control reg" style="margin: auto auto;" type="text" name="discount" placeholder="Discount in %tage" required>
			</div>
			<div class="form-group">
				<input class="form-control reg" style="margin: auto auto;" type="text" name="category" placeholder="Category" required>
			</div>
			<div class="form-group">
				<input class="form-control reg" style="margin: auto auto;" type="text" name="company" placeholder="Company-Name" required>
			</div>
		<div class="form-group">
				<input class="form-control reg" style="margin: auto auto;" type="text" name="imagetop" placeholder="Image-Top" required>
		</div>
		<div class="form-group">
			<input class="form-control reg" style="margin: auto auto;" type="text" name="imageleft" placeholder="Image-Left" required>
		</div>
		<div class="form-group">
			<input class="form-control reg" style="margin: auto auto;" type="text" name="imageright" placeholder="Image-Right" required>
		</div>
		<div class="form-group">
			<input class="form-control reg" style="margin: auto auto;" type="text" name="imagebottom" placeholder="Image-Bottom" required>
		</div>
		<div class="form-group">
			<textarea class="form-control" style="margin: auto auto" name="description" placeholder="Short Description about Product" required></textarea>
		</div>	
		<div class="form-row">
		<div class="col">
			<div class="form-group">
			<input class="form-control fn reg" type="text" name="model" placeholder="Model Name" required>   </div>	
		</div>
		<div class="col">
			<div class="form-group">
			<input class="form-control  reg" type="text" name="material" placeholder="Material" required>   </div>	
	    </div>
		<div class="col">
			<div class="form-group">
			<input class="form-control mr-auto  reg" type="text" name="occasion" placeholder="Occasion" required>   </div>	
	    </div>
	</div>
	<div class="form-row">
		<div class="col">
			<div class="form-group">
			<input class="form-control fn reg" type="text" name="sole" placeholder="Sole Type" required>   </div>	
		</div>
		<div class="col">
			<div class="form-group">
			<input class="form-control  reg" type="text" name="closure" placeholder="Closure" required>   </div>	
	    </div>
		<div class="col">
			<div class="form-group">
			<input class="form-control mr-auto reg" type="text" name="weight" placeholder="Weight(in g)" required>   </div>	
	    </div>
	</div>
	
	<div class="form-group">
            <button class="btn reg btn-lg btn-outline-success btn-block" style="margin: auto auto;">Submit</button>
    </div>
</form>
		</div>
	</div>


<%- include('../partials/footer'); -%>
